{% extends 'base.html.twig' %} {% block title %}Groupe{% endblock %} {% block
body %} {% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/cour_profil.css') }}" />
{% endblock %}

<!--================Home Banner Area =================-->
